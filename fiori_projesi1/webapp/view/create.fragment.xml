                <Label text="Bitiş Tarihi" labelFor="DTI1" showColon="true" required="true" />
                <DateTimeInput id="endyear" type="Date" displayFormat="short" class="sapUiSmallMarginBottom"  required="true"/>
            </content>
        </Panel>
    </Dialog>
   

